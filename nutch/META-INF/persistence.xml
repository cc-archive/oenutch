<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="OerCloudPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>org.creativecommons.learn.oercloud.Bookmark</class>
    <class>org.creativecommons.learn.oercloud.Tag</class>
    <class>org.creativecommons.learn.oercloud.User</class>
    <class>org.creativecommons.learn.oercloud.Tagmap</class>
    <class>org.creativecommons.learn.oercloud.OerFeed</class>
    <class>org.creativecommons.learn.oercloud.Watched</class>
    <properties>
      <property name="toplink.jdbc.user" value="root"/>
      <property name="toplink.jdbc.password" value=""/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost/oercloud"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
